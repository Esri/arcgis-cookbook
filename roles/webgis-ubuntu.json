{
  "java":{
    "install_flavor":"oracle",
    "jdk_version":"7",
    "oracle":{
      "accept_oracle_download_terms":true
    }
  },
  "arcgis":{
    "run_as_user":"arcgis",
    "version":"10.5",
    "hosts":{
      "mydomain.com":""
    },
    "web_server":{
      "webapp_dir":"/opt/tomcat/webapps"
    },
    "web_adaptor":{
      "setup":"/arcgis/10.5/WebAdaptor/CD_Linux/Setup"
    },
    "data_store":{
      "setup":"/arcgis/10.5/ArcGISDataStore/CD_Linux/Setup"
    },
    "server":{
      "domain_name":"mydomain.com",
      "admin_username":"admin",
      "admin_password":"changeit",
      "directories_root":"/home/arcgis/server/directories",
      "setup":"/arcgis/10.5/ArcGISServer/CD_Linux/Setup",
      "authorization_file":"/arcgis/10.5/Authorization_Files/Server_Ent_Adv.prvc"
    },
    "portal":{
      "domain_name":"mydomain.com",
      "admin_username":"admin",
      "admin_password":"changeit",
      "admin_email":"admin@mydomain.com",
      "security_question":"Your favorite ice cream flavor?",
      "security_question_answer":"vanilla",
      "setup":"/arcgis/10.5/ArcGISPortal/CD_Linux/Setup",
      "authorization_file":"/arcgis/10.5/Authorization_Files/Portal.prvc"
    }
  },
  "run_list":[
    "recipe[arcgis-enterprise::system]",
    "recipe[java]",
    "recipe[iptables]",
    "recipe[arcgis-enterprise::iptables]",
    "recipe[arcgis-enterprise::server]",
    "recipe[arcgis-enterprise::server_wa]",
    "recipe[arcgis-enterprise::datastore]",
    "recipe[arcgis-enterprise::portal]",
    "recipe[arcgis-enterprise::portal_wa]",
    "recipe[arcgis-enterprise::federation]"
  ]
}
