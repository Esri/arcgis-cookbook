{
  "java":{
    "install_flavor":"oracle",
    "jdk_version":"8",
    "oracle":{
      "accept_oracle_download_terms":true
    }
  },
  "tomcat":{
      "instance_name":"arcgis"
  },
  "arcgis":{
    "run_as_user":"centos",
    "version":"10.6.1",
    "web_server":{
      "webapp_dir":"/opt/tomcat_arcgis/webapps"
    },
    "web_adaptor":{
          "admin_access":true,
      "setup":"/home/centos/binaries/WebAdaptor/Setup"
    },
    "data_store":{
      "setup":"/home/centos/binaries/ArcGISDataStore_Linux/Setup"
    },
    "server":{
	  "private_url":"https://ha1.vmfleray.int:6443/arcgis",
      "primary_server_url":"https://ha1.vmfleray.int:6443/arcgis",
      "wa_url":"https://ha2.vmfleray.int/server",
      "url":"https://ha2.vmfleray.int:6443/arcgis",
      "web_context_url":"https://dns.vmfleray.int/server",
      "system_properties":{"WebContextURL": "https://dns.vmfleray.int/server"},
      "config_store_connection_string":"/shared/arcgis/arcgisserver/config-store",
      "directories_root":"/shared/arcgis/arcgisserver",
      "admin_username":"siteadmin",
      "admin_password":"MY_SUPER_PASSWORD",
      "setup":"/home/centos/binaries/ArcGISServer/Setup",
      "authorization_file":"/home/centos/binaries/ArcGISGISServerAdvanced_2020.prvc"
    },
    "portal":{
	  "private_url":"https://ha1.vmfleray.int:7443/arcgis",
      "primary_machine_url":"https://ha1.vmfleray.int:7443",
      "web_context_url":"https://dns.vmfleray.int/portal",
      "content_dir":"/shared/arcgis/arcgisportal/content",
      "admin_username":"portaladmin",
      "admin_password":"MY_SUPER_PASSWORD",
      "admin_email":"admin@mydomain.com",
      "security_question":"Your favorite ice cream flavor?",
      "security_question_answer":"vanilla",
      "setup":"/home/centos/binaries/PortalForArcGIS/Setup",
      "authorization_file":"/home/centos/binaries/PortalforArcGIS_Level2NamedUsers_2020.prvc"
    }
  },
  "run_list":[
    "recipe[arcgis-enterprise::system]",
    "recipe[esri-tomcat]",
    "recipe[iptables]",
    "recipe[arcgis-enterprise::iptables]",
    "recipe[arcgis-enterprise::server_node]",
    "recipe[arcgis-enterprise::server_wa]",
    "recipe[arcgis-enterprise::datastore_standby]",
    "recipe[arcgis-enterprise::portal_standby]",
    "recipe[arcgis-enterprise::portal_wa]",
    "recipe[arcgis-enterprise::federation]"
  ]
}
